{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1 style="text-align: center">Inscription</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur' ,'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label': 'Adresse e-mail' ,'attr': {'placeholder': 'Adresse e-mail'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe' ,'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe' ,'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}
    <hr>
    <button type="submit" class="btn btn-success">Valider</button>

    {{ form_end(form) }}

{% endblock %}
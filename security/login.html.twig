{% extends 'base.html.twig' %}

{% block body %}

		<h1 style="text-align: center">Connexion</h1>

		{# Indiquer en action le nom de la route renvoyant au form_login du firewall d√©fini dans 'security.yaml' #}
		<form action="{{ path('security_login') }}" method="POST">
				<div class="form-group" style="margin: 40px">
						<input type="email" name="_username" class="form-control" placeholder="Votre adresse e-mail" required>
				</div>
				<div class="form-group" style="margin: 40px">
						<input type="password" name="_password" class="form-control" placeholder="Votre mot de passe" required>
				</div>
				<hr style="margin: 40px">
				<div class="form-group" style="margin: 40px">
						<button type="submit" class="btn btn-success">Se connecter</button>
				</div>
				<div class="form-group" style="text-align: center;">
						<h3>Vous n'avez pas encore de compte utilisateur ?</h3>
						<p>Par ici !</p>
						<a href="{{ path('security_registration') }}" class="btn btn-info">S'inscrire</a>
				</div>
		</form>

{% endblock %}
